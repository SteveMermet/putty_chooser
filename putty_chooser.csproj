<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net48</TargetFramework>
    <RootNamespace>CVLog_serial_tool</RootNamespace>
    <AssemblyName>CVLog_serial_tool</AssemblyName>
    <Platforms>AnyCPU</Platforms>
        <PostBuildEvent>powershell -Command "$ts = Get-Date -Format yyyyMMdd_HHmmss; Compress-Archive -Force -Path '$(OutDir)*' -DestinationPath \"$(OutDir)CVLog_serial_tool_$ts.zip\""</PostBuildEvent>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Windows.Forms" />
    <Reference Include="System.IO.Ports" />
    <Reference Include="System.Drawing" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="9.0.8" />
    <PackageReference Include="System.IO.Ports" Version="9.0.8" />
    <PackageReference Include="System.Management" Version="9.0.8" />
  </ItemGroup>
</Project>
